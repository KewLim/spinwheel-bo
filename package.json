{
  "name": "luckytaj-fullstack",
  "version": "1.0.0",
  "description": "Lucky Taj Angpau Game - Full Stack Development",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon server.js",
    "client:dev": "cd client && npm run dev",
    "server:start": "node server.js",
    "client:build": "cd client && npm run build",
    "install:all": "npm install && cd client && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.3.0",
    "firebase-admin": "^13.5.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.2",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "node-fetch": "^3.3.2",
    "socket.io": "^4.6.1",
    "sqlite3": "^5.1.7"
  }
}
