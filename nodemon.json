{
  "watch": [
    "server.js",
    "routes/**/*.js",
    "models/**/*.js",
    "middleware/**/*.js",
    "sqlite-models/**/*.js",
    "database-adapter.js"
  ],
  "ignore": [
    "client/**",
    "node_modules/**",
    "*.db",
    "*.log"
  ],
  "ext": "js,json",
  "delay": "1000",
  "env": {
    "NODE_ENV": "development",
    "PORT": "3003"
  },
  "verbose": true,
  "execMap": {
    "js": "node"
  }
}
